<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/clGame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/old_games_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/tvTeam1"
        android:layout_width="151dp"
        android:layout_height="28dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/cuprum"
        android:gravity="center"
        android:text="Отбор 1"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvPts1"
        app:layout_constraintStart_toStartOf="@+id/tvPts1"
        app:layout_constraintTop_toBottomOf="@+id/tvPts1" />

    <TextView
        android:id="@+id/tvTeam2"
        android:layout_width="151dp"
        android:layout_height="28dp"
        android:fontFamily="@font/cuprum"
        android:gravity="center"
        android:text="Отбор 2"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/tvPts2"
        app:layout_constraintStart_toEndOf="@+id/tvPts1"
        app:layout_constraintTop_toBottomOf="@+id/view19" />

    <TextView
        android:id="@+id/tvPts1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/dosis_bold"
        android:gravity="center"
        android:text="109"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/tvPts2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPts2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dosis_bold"
        android:gravity="center"
        android:text="109"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/tvPts1"
        app:layout_constraintTop_toTopOf="@+id/tvPts1" />

    <View
        android:id="@+id/view19"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:background="@color/accent1"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="@+id/tvPts1"
        app:layout_constraintStart_toStartOf="@+id/tvPts1"
        app:layout_constraintTop_toBottomOf="@+id/tvPts1" />

    <View
        android:id="@+id/view29"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:background="@color/accent1"
        app:layout_constraintEnd_toEndOf="@+id/tvPts2"
        app:layout_constraintStart_toEndOf="@+id/tvPts1"
        app:layout_constraintTop_toBottomOf="@+id/tvPts1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-24dp"
        android:fontFamily="@font/dosis_bold"
        android:text="@string/vs"
        android:textColor="@color/accent1"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/view29"
        app:layout_constraintEnd_toStartOf="@+id/view29"
        app:layout_constraintStart_toEndOf="@+id/view19" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDelGame"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:contentDescription="@string/continueBtn"
        android:src="@drawable/hiks"
        app:backgroundTint="@color/myLight"
        app:fabCustomSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="20dp"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
        app:tint="@color/accent2" />
</androidx.constraintlayout.widget.ConstraintLayout>